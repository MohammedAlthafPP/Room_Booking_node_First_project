<link rel="stylesheet" href="/stylesheets/optpage.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">


<div>

    <div class="d-flex justify-content-center align-items-center container">

        <div class="card py-5 px-3 " style="height:max-content;">
            <div>
                {{#if otpResendMsg}}
                <p class="text-center" style="color:green;"> <strong>{{otpResendMsg}}</strong> </p>
                {{/if}}


            </div>

            <form action="/mobileotp" method="post" id="Mobile-OTP">
                <h5 class="m-0">Mobile verification</h5><span class="mobile-text">Enter the code we just send on your
                    Mobile Number<b class="text-danger">{{userDetails.email}}</b></span>
                <div class=" flex-row mt-5"><input type="number" name="otp" class="form-control" autofocus="">
                </div>
                {{#if MobileOTPErr}}
                <h6 class="text-start" style="color:red;">{{MobileOTPErr}}</h6>
                {{else}}
                {{/if}}

                <div class="d-flex justify-content-center mt-3">
                    <button class="btn btn-primary " type="submit">Submit</button>
                </div>


                <div class="text-center mt-3"><span class="d-block mobile-text">Don't receive the code?</span><span
                        class="font-weight-bold text-danger cursor"> <a href="/resentOtp" class="btn "> Resend</a>
                    </span></div>


            </form>
        </div>
    </div>


</div>



















